extends ../base.pug


block content
    h4 Change Title of video
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Upload Video File
        // id is for label and name is for multer middleware
        input(type="file", id="video", name="video", accept="video/*", required)
        input(name="title", placeholder="Video Title", value=video.title, required, maxlength=50)
        input(name="description", placeholder="Video Description", value=video.description, required, maxlength=300)
        input(name="hashtags", placeholder="Hashtags ...,...,...", value=video.hashtags.join(), required)
        input(value="Save", type="submit")